<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SingleplayerActivity"
    android:gravity="center"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tv_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"/>


    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="181dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:id="@+id/rect_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/basic_square" />

        <View
            android:id="@+id/rect_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/basic_square" />

        <View
            android:id="@+id/rect_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/basic_square" />

        <View
            android:id="@+id/rect_4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/basic_square" />

        <View
            android:id="@+id/rect_5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/basic_square" />

        <View
            android:id="@+id/rect_6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/basic_square" />

        <View
            android:id="@+id/rect_7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/basic_square" />

        <View
            android:id="@+id/rect_8"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/basic_square" />

        <View
            android:id="@+id/rect_9"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/basic_square" />

    </GridLayout>

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Заново"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/gridLayout"
        app:layout_constraintStart_toStartOf="@+id/gridLayout"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>